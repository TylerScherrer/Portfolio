@model IEnumerable<BudgetTracker.Models.Category>

<div class="container py-4" style="background:#f8f9fa;">
    <div class="text-center mb-5">
        <h1 class="fw-bold">Categories</h1>
        <p class="text-muted">Manage your categories and their allocated amounts.</p>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h4 class="fw-bold mb-3"><i class="fas fa-folder me-2 text-warning"></i>Your Categories</h4>
            <div class="table-responsive">
                <table class="table table-hover align-middle table-sm">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Allocated Amount</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td>@category.Name</td>
                                    <td>@category.AllocatedAmount.ToString("C")</td>
                                    <td class="text-end">
                                        <a class="btn btn-info btn-sm" href="@Url.Action("Details", "Category", new { id = category.Id })">
                                            <i class="fas fa-eye me-1"></i>View
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted">No categories available</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

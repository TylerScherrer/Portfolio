@model BudgetTracker.Models.Category

<div class="container py-4" style="background: #f8f9fa;">
    <div class="text-center mb-5">
        <h1 class="fw-bold">Add Category</h1>
        <p class="text-muted">Create a new category and allocate your budget.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h4 class="fw-bold mb-3 text-primary"><i class="fas fa-folder-plus me-2"></i>Create Category</h4>
                    <form asp-action="Create" method="post" class="row g-3">
                        <input type="hidden" asp-for="BudgetId" />
                        <div class="col-12">
                            <label asp-for="Name" class="form-label fw-semibold">Category Name</label>
                            <input asp-for="Name" class="form-control" placeholder="e.g. Groceries" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="AllocatedAmount" class="form-label fw-semibold">Allocated Amount</label>
                            <input asp-for="AllocatedAmount" class="form-control" placeholder="e.g. 200" />
                            <span asp-validation-for="AllocatedAmount" class="text-danger"></span>
                        </div>
                        <div class="col-12 d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-check me-1"></i>Submit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

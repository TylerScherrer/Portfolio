@model BudgetTracker.Models.Category

<h1>Add Category</h1>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="BudgetId" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AllocatedAmount"></label>
        <input asp-for="AllocatedAmount" class="form-control" />
        <span asp-validation-for="AllocatedAmount" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

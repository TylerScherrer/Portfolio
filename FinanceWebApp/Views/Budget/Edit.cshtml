@model BudgetTracker.Models.Budget

@{
    ViewData["Title"] = "Edit Budget";
}

<h2>Edit Budget</h2>

<form asp-action="Edit" method="post">
    <!-- Hidden field for Budget ID -->
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label">Budget Name</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TotalAmount" class="control-label">Total Amount</label>
        <input asp-for="TotalAmount" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="TotalAmount" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

<!-- Client-Side Validation -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
